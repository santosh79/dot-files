# attach/detach a container to a network
alias dncon='docker network connect '
alias ddcon='docker network disconnect '
alias dev='docker container run -it --name dev --network dev_net -v $(pwd):/app santoshdocker2021/dev sh'
alias mirb='docker container run -it --rm ruby:3.0-alpine irb'
alias miex='docker container run -it --rm elixir:1.11.4-alpine iex'
